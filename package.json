{
  "name": "PiggieStack",
  "version": "0.0.5",
  "scripts": {
    "db:create": "npm run db:create --prefix server",
    "db:reset": "npm run db:reset --prefix server",
    "db:migrate": "npm run db:migrate --prefix server",
    "start:backend": "npm run start --prefix server",
    "start:backend:dev": "npm run start:dev --prefix server",
    "start:frontend": "npm run dev --prefix frontend",
    "start:frontend:dev": "npm run dev --prefix frontend",
    "start:all": "concurrently \"npm run start:server\" \"npm run start:frontend\"",
    "build:backend": "npm run build --prefix server",
    "build:frontend": "npm run build --prefix frontend",
    "build:all": "npm run build:server && npm run build:frontend",
    "install:all": "npm install --prefix backend && npm install --prefix frontend"
  },
  "dependencies": {
    "concurrently": "^8.0.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0"
  }
}
